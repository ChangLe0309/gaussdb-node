{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "push": true,
      "createRelease": false
    },
    "publish": {
      "ignoreChanges": ["**/*.md", "**/test/**", "**/*.test.*"],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "ignoreChanges": ["**/*.md", "**/test/**"]
}
